              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EatenProductResponse"
                }
              }
            }
          },
          "400": {
            "description": "The passed id is not valid"
          },
          "401": {
            "description": "Not authorized"
          },
          "404": {
            "description": "Eaten product not found"
          }
        }
      }
    },
