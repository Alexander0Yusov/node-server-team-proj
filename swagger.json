      "LogoutResponse": {
        "type": "string",
        "example": "No Content"
      },

      "AddEatenProductRequest": {
        "type": "object",
        "required": ["productId", "weight", "date"],
        "properties": {
          "productId": {
            "type": "string",
            "description": "Id of eaten product",
            "example": "5d51694902b2373622ff5773"
          },
          "weight": {
            "type": "number",
            "description": "Weight of eaten product",
            "example": 300
          },
          "date": {
            "type": "string",
            "description": "Date when the product was eaten",
            "example": "2023-09-19T11:43:11.790+00:00"
          }
        }
      },
      "EatenProductResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Id of info about eaten product",
            "example": "12345678qwerty"
          },
          "productId": {
            "type": "string",
            "description": "Id of eaten product",
            "example": "5d51694902b2373622ff5773"
          },
          "weight": {
            "type": "number",
            "description": "Weight of eaten product",
            "example": 300
          }
        }
      },
      "AddDoneExerciseRequest": {
        "type": "object",
        "required": ["exerciseId", "duration", "date"],
        "properties": {
          "exerciseId": {
            "type": "string",
            "description": "Id of done exercise",
            "example": "6503194aa1c682f0d6a5ce3b"
          },
          "duration": {
            "type": "number",
            "description": "Duration of done exercise",
            "example": 30
          },
          "date": {
            "type": "string",
            "description": "Date when the exercise was completed",
            "example": "2023-09-19T11:43:11.790+00:00"
          }
        }
      },
      "DoneExerciseResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Id of info about done exercise",
            "example": "12345678qwerty"
          },
          "exerciseId": {
            "type": "string",
            "description": "Id of done exercise",
            "example": "6503194aa1c682f0d6a5ce3b"
          },
          "duration": {
            "type": "number",
            "description": "Duration of done exercise",
            "example": 300
          }
        }
      },
      "Diary": {
        "type": "object",
        "properties": {
          "meal": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "_id": {
                  "type": "string",
                  "description": "Id of info about eaten product",
                  "example": "12345678qwerty"
                },
                "weight": {
                  "type": "number",
                  "description": "Weight of eaten product",
                  "example": 150
                },
                "product": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string",
                      "description": "Id of product",
                      "example": "5d51694902b2373622ff5773"
                    },
                    "weight": {
                      "type": "number",
                      "description": "Weight of product",
                      "example": 100
                    },
                    "calories": {
                      "type": "number",
                      "description": "Calories contained in this weight of product",
                      "example": 340
                    },
                    "category": {
                      "type": "string",
                      "description": "Category of product",
                      "example": "dairy"
                    },
                    "title": {
                      "type": "string",
                      "description": "Title of product",
                      "example": "Danbo cheese"
                    },
                    "groupBloodNotAllowed": {
                      "type": "object",
                      "properties": {
                        "1": {
                          "type": "boolean",
                          "description": "Is this product not recommended for blood group 1 ?",
                          "example": true
                        },
                        "2": {
                          "type": "boolean",
                          "description": "Is this product not recommended for blood group 2 ?",
                          "example": true
                        },
                        "3": {
                          "type": "boolean",
                          "description": "Is this product not recommended for blood group 3 ?",
                          "example": false
                        },
                        "4": {
                          "type": "boolean",
                          "description": "Is this product not recommended for blood group 4 ?",
                          "example": false
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "workout": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "_id": {
                  "type": "string",
                  "description": "Id of info about done exercise",
                  "example": "123456789qwerty"
                },
                "duration": {
                  "type": "number",
                  "description": "Duration of done exercise",
                  "example": 15
                },
                "exercise": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string",
                      "description": "Id of exercise",
                      "example": "6503194aa1c682f0d6a5ce3b"
                    },
                    "bodyPart": {
                      "type": "number",
                      "description": "Part of body",
                      "example": "waist"
                    },
                    "equipment": {
                      "type": "number",
                      "description": "Equipment",
                      "example": "body weight"
                    },
                    "gifUrl": {
                      "type": "string",
                      "description": "How to do execise",
                      "example": "https://res.cloudinary.com/ditdqzoio/image/upload/v1687127066/exercises/0001.gif"
                    },
                    "name": {
                      "type": "string",
                      "description": "Name of exercise",
                      "example": "3/4 sit-up"
                    },
                    "target": {
                      "type": "string",
                      "description": "Target",
                      "example": "abs"
                    },
                    "burnedCalories": {
                      "type": "number",
                      "description": "Calories burned during this exercise time",
                      "example": 220
                    },
                    "time": {
                      "type": "number",
                      "description": "Time of completing the exercise",
                      "example": 3
                    }
                  }
                }
              }
            }
          }
        },
        "example": {
          "meal": [
            {
              "_id": "12345678qwerty",
              "weight": 200,
              "product": {
                "_id": "5d51694902b2373622ff5773",
                "weight": 100,
                "calories": 340,
                "category": "dairy",
                "title": "Danbo cheese",
                "groupBloodNotAllowed": {
                  "1": true,
                  "2": true,
                  "3": false,
                  "4": false
                }
              }
            }
          ],
          "workout": [
            {
              "_id": "123456789qwerty",
              "duration": 14,
              "exercise": {
                "_id": "6503194aa1c682f0d6a5ce3b",
                "bodyPart": "waist",
