                    "example": "1985-09-17T15:47:57.302+00:00"
                  },
                  "blood": {
                    "type": "integer",
                    "description": "User's group of blood",
                    "example": 2
                  },
                  "sex": {
                    "type": "string",
                    "description": "User's sex",
                    "example": "female"
                  },
                  "levelActivity": {
                    "type": "integer",
                    "description": "User's level of activity",
                    "example": 3
                  },
                  "dailySportTime": {
                    "type": "number",
                    "description": "Individual daily activity rate in minutes",
                    "example": 110
                  },
                  "bmr": {
                    "type": "number",
                    "description": "Individual daily calorie intake",
                    "example": 2250
                  },
                  "defaultParams": {
                    "type": "boolean",
                    "description": "Whether to use default body parameter values instead of user-entered ones",
                    "example": false
                  }
                }
              }
            }
          },
          "token": {
            "type": "string",
            "description": "User's token",
            "example": "qWbgfR7j4D"
          }
        }
      },
      "UserInfoResponse": {
        "type": "object",
        "properties": {
          "user": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "User's name",
                "example": "Olivia Lewis"
              },
              "email": {
                "type": "string",
                "description": "User's email",
                "format": "email"
              },
              "avatarURL": {
                "type": "string",
                "description": "User's avatar URL",
                "example": "https://gravatar.com/avatar/c30d6c14569650b95a78e33e5013683e"
              },
              "bodyParams": {
                "type": "object",
                "properties": {
                  "height": {
                    "type": "number",
                    "description": "User's height",
                    "example": 175
                  },
                  "currentWeight": {
                    "type": "number",
                    "description": "User's current weight",
                    "example": 86
                  },
                  "desiredWeight": {
                    "type": "number",
                    "description": "User's desired weight",
                    "example": 80
                  },
                  "birthdate": {
                    "type": "string",
                    "description": "User's date of birth",
                    "example": "1985-09-17T15:47:57.302+00:00"
                  },
                  "blood": {
                    "type": "integer",
                    "description": "User's group of blood",
                    "example": 2
                  },
                  "sex": {
                    "type": "string",
                    "description": "User's sex",
                    "example": "female"
                  },
                  "levelActivity": {
                    "type": "integer",
                    "description": "User's level of activity",
                    "example": 3
                  },
                  "dailySportTime": {
                    "type": "number",
                    "description": "Individual daily activity rate in minutes",
                    "example": 110
                  },
                  "bmr": {
                    "type": "number",
                    "description": "Individual daily calorie intake",
                    "example": 2250
                  },
                  "defaultParams": {
                    "type": "boolean",
                    "description": "Whether to use default body parameter values instead of user-entered ones",
                    "example": false
                  }
                }
              }
