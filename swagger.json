          "400": {
            "description": "Missing fields"
          },
          "401": {
            "description": "Not authorized"
          }
        }
      },
      "delete": {
        "tags": ["Eaten products"],
        "summary": "Deletion of eaten product",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
