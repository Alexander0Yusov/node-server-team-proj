            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DoneExerciseResponse"
                }
              }
            }
          },
          "400": {
            "description": "The passed id is not valid"
          },
          "401": {
            "description": "Not authorized"
          },
          "404": {
            "description": "Done exercise not found"
          }
